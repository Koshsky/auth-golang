# Auth Service Environment Configuration
# Скопируйте этот файл в .env и укажите ваши значения

# Database Configuration (ОБЯЗАТЕЛЬНО)
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=your_password
AUTH_DB_NAME=auth_service
AUTH_DB_SSLMODE=disable

# RabbitMQ Configuration (опционально - есть значения по умолчанию)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=user_events

# JWT Configuration (ОБЯЗАТЕЛЬНО - минимум 32 символа)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# Service Configuration (ОБЯЗАТЕЛЬНО)
AUTH_SERVICE_PORT=50051

# Logging Configuration (опционально - есть значения по умолчанию)
SERVICE_NAME=auth-service
LOG_LEVEL=INFO              # Возможные значения: DEBUG, INFO, WARN, ERROR
SERVICE_VERSION=1.0.0
ENVIRONMENT=development     # Возможные значения: development, staging, production

# TLS Configuration (опционально)
ENABLE_TLS=false
TLS_CERT_FILE=certs/server-cert.pem
TLS_KEY_FILE=certs/server-key.pem